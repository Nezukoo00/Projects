<Window x:Class="frstvar.FindWordsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:frstvar"
        mc:Ignorable="d"
        Title="FindWordsWindow" Height="200" Width="450">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="InputTextBox" Width="350" Height="30" Margin="5"/>
            <Button Content="Find Words" Click="OnFindWordsClick" Width="150" Height="30" Margin="5"/>
            <TextBlock x:Name="LongestWordTextBlock" Margin="5"/>
            <TextBlock x:Name="ShortestWordTextBlock" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
