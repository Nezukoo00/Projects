<Window x:Class="Projects.WordCountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projects"
        mc:Ignorable="d"
        Title="WordCountWindow" Height="200" Width="450">
    <StackPanel Margin="10">
        <TextBox Name="InputTextBox" Width="350" Height="30" Margin="5"/>
        <Button Content="Count Words" Click="CountWords"/>
        <TextBlock Name="ResultTextBlock" Margin="5"/>
    </StackPanel>
</Window>
