<Window x:Class="Projects.RemoveVowelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projects"
        mc:Ignorable="d"
        Title="RemoveVowelWindow" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="InputTextBox" Width="350" Height="30" Margin="5" />
            <Button Content="Replace Vowels" Click="OnReplaceVowelsClick" Width="150" Height="30" Margin="5"/>
            <TextBlock x:Name="ResultTextBlock" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
